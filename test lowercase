import pandas as pd
from pyclense.standardizer import Standardizer

print("\n" + "="*40)
print("üß™ TESTING: convert_to_lowercase")
print("="*40)

# 1. Setup Messy Data (Random UPPERCASE and MixedCase)
data = {
    'Email': ['USER@Example.com', 'Admin@Test.Org', 'MixedCase@Mail.Net'],
    'Status': ['PENDING', 'Active', 'cAnCeLeD']
}

df = pd.DataFrame(data)
print("‚ùå BEFORE (Messy Casing):\n", df)

# 2. Initialize the Standardizer
cleaner = Standardizer(df)

# 3. Run the Lowercase Method
# We apply it to 'Email' and 'Status' to force them down
cleaner.convert_to_lowercase(['Email', 'Status'])

# 4. Get the Result
result = cleaner.get_dataframe()

print("\n‚úÖ AFTER (Should be all lowercase):\n", result)
print("\n" + "="*40)