import pandas as pd
from pyclense.standardizer import Standardizer

print("\n" + "="*40)
print("üß™ TESTING: fix_whitespace")
print("="*40)

# 1. Setup Messy Data (Lots of extra invisible spaces)
data = {
    'City': [
        '  Cagayan   de   Oro  ',  # Leading, trailing, and middle spaces
        'Manila      ',            # Trailing spaces
        '      Cebu',              # Leading spaces
        'Davao City'               # Already clean (Control group)
    ],
    'Description': [
        'Big    Gap', 
        '  Small gap',
        'NoGap',
        '   '                      # Just spaces (should become empty)
    ]
}

df = pd.DataFrame(data)
print("‚ùå BEFORE (Look closely at the gaps):\n", df)

# 2. Initialize the Standardizer
cleaner = Standardizer(df)

# 3. Run the Whitespace Fixer
# We apply it to both columns
cleaner.fix_whitespace(['City', 'Description'])

# 4. Get the Result
result = cleaner.get_dataframe()

print("\n‚úÖ AFTER (All extra spaces removed):\n", result)
print("\n" + "="*40)