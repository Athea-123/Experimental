import pandas as pd
from pyclense.standardizer import Standardizer

print("\n" + "="*40)
print("ğŸ§ª TESTING: remove_special_chars")
print("="*40)

# 1. Setup Messy Data (Symbols, Punctuation, and Emojis)
data = {
    'Username': ['User@101', 'Admin#One', 'Guest$Money!', 'Cool_Guy*'],
    'Comment':  ['Hello!!!', 'I love coding â¤ï¸', 'Python is ğŸ”¥ğŸ”¥ğŸ”¥', 'Error: 404?'],
    'ID_Code':  ['ID(123)', '[456]', '{789}', '001'] # Keeping numbers is important here
}

df = pd.DataFrame(data)
print("âŒ BEFORE (Messy Symbols):\n", df)

# 2. Initialize the Standardizer
cleaner = Standardizer(df)

# 3. Run the Special Characters Remover
# We apply it to all columns to see the cleaning power
cleaner.remove_special_chars(['Username', 'Comment', 'ID_Code'])

# 4. Get the Result
result = cleaner.get_dataframe()

print("\nâœ… AFTER (Clean Alphanumeric):\n", result)
print("\n" + "="*40)