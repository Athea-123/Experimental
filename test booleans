import pandas as pd
from pyclense.standardizer import Standardizer

print("\n" + "="*40)
print("ğŸ§ª TESTING: standardize_booleans")
print("="*40)

# 1. Setup Messy Data (All kinds of ways to say Yes/No)
data = {
    'Is_Student': ['yes', 'N', 'TRUE', '0', '1', 'false', 'y', 'NO'],
    'Has_Account': ['True', 'False', 'yes', 'no', '1', '0', 't', 'f']
}

df = pd.DataFrame(data)
print("âŒ BEFORE (Messy Logic):\n", df)

# 2. Initialize the Standardizer
cleaner = Standardizer(df)

# 3. Run the Boolean Standardizer
# We apply it to both logic columns
cleaner.standardize_booleans(['Is_Student', 'Has_Account'])

# 4. Get the Result
result = cleaner.get_dataframe()

print("\nâœ… AFTER (Clean True/False):\n", result)
print("\n" + "="*40)