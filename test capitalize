import pandas as pd
from pyclense.standardizer import Standardizer

print("\n" + "="*40)
print("üß™ TESTING: capitalize_names")
print("="*40)

# 1. Setup Messy Data (Mixed lowercase and UPPERCASE)
data = {
    'Full_Name': ['athea budlong', 'SARIBA ABDULA', 'kate avancena', 'jynobelle jacobo'],
    'City': ['cagayan de oro', 'MANILA', 'davao', 'cebu']
}

df = pd.DataFrame(data)
print("‚ùå BEFORE (Messy Casing):\n", df)

# 2. Initialize the Standardizer
cleaner = Standardizer(df)

# 3. Run the Capitalize Method
# We apply it to both columns to see if it fixes both names and cities
cleaner.capitalize_names(['Full_Name', 'City'])

# 4. Get the Result
result = cleaner.get_dataframe()

print("\n‚úÖ AFTER (Should be Title Case):\n", result)
print("\n" + "="*40)